<section class="container" id="comment-page">
  <section class="row text-center mt-1">
    <div class="col-sm-12" id="header">
      <h1>New Hampshire News Bulleton</h1>
      <h2>Read Free or Die</h2>
      <a class="nav-link" href="/">Home</a>
    </div>
  </section>

  <section class="col m12">
    <div class="text-left">
      <button type="submit" value="{{place.id}}" class="btn btn-form raised btn-lg mb-2" id="comment-btn"><span
          class="fa fa-fire"></span>Add
        Comment</button>
    </div>
  </section>
</section>

<!-- Modal -->
<div class="modal fade" role="dialog" id="comment-modal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <form>
        <div class="form-group" id="user">
          <label for="user">User</label>
          <textarea class="form-control" id="user-name" rows="1"></textarea>
        </div>
        <div class="form-group" id="comments">
          <label for="comment">Comments</label>
          <textarea class="form-control" id="user-comment" rows="6"></textarea>
        </div>
        <button type="submit" class="btn btn-form" id="comment-submit">Submit</button>
      </form>
    </div>
  </div>
</div>