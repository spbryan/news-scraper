<section class="container" id="main-page">
  <section class="row text-center mt-1">
    <div class="col-sm-12" id="header">
      <h1>New Hampshire News Bulleton</h1>
      <h2>Read Free or Die</h2>
    </div>
  </section>

  <section class="row mt-1">
    <div class='col-sm-4'>
      <div class="carousel slide" data-ride="carousel" data-interval="6000">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/bridge.jpg" class="crsl-img d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-verticle">
            </div>
          </div>
          <div class="carousel-item">
            <img src="/images/tug-boat-background.jpg" class="crsl-img d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-horizontal"><br>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/images/foliage.jpg" class="crsl-img d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-verticle">
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class='col-sm-4'>
      <div class="carousel slide" data-ride="carousel" data-interval="8000">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/lighthouse.jpg" class="crsl-img d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-verticle">
            </div>
          </div>
          <div class="carousel-item">
            <img src="/images/mountain.jpg" class="crsl-img d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-horizontal"><br>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/images/pea.jpg" class="crsl-img d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-verticle">
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class='col-sm-4'>
      <div class="carousel slide" data-ride="carousel" data-interval="7000">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/statehouse.jpg" class="crsl-img d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-verticle">
            </div>
          </div>
          <div class="carousel-item">
            <img src="/images/white-mountain.jpg" class="crsl-img d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-horizontal"><br>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/images/exeter.jpg" class="crsl-img d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-verticle">
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="row mt-4">
    <div class='col-sm-12'>
      <button type="submit" class="btn btn-primary" id="delete-articles">Delete Articles</button>
      <button type="submit" class="btn btn-primary" id="scrape-articles">Get Latest News</button>
    </div>
  </section>

  <section class="row mt-4">
    <div class='col-sm-12 table-responsive'>
      <table class="table table-striped stencil-font bigger-font" id="article-table">
        <thead class="table-header">
          <tr>
            <th scope="col">Date</th>
            <th scope="col">Title</th>
            <th scope="col">Comments</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody class="table-body">
          {{#each article}}
          <tr class="table-row">
            <td>{{dateCaptured}}</td>
            <td><a href="{{link}}" target="_blank">{{title}}</a></td>
            <td class="align-middle"><button class="btn btn-table raised comments-button" data-value="{{_id}}">Comments</button></td>
            <td class="align-middle"><button class="btn btn-table raised delete-button" data-value="{{_id}}">&times;</button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </section>
</section>