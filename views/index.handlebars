        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/seascape-background.jpg" class="d-block w-100 h-75" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-verticle">
            </div>
          </div>
          <div class="carousel-item">
            <img src="/images/tug-boat-background.jpg" class="d-block w-100 h-75" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-horizontal"><br>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/images/lighthouse-background.jpg" class="d-block w-100 h-75" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-verticle">
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class='col-sm-4'>
      <div id="carouselId" class="carousel slide" data-ride="carousel" data-interval="9000">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/seascape-background.jpg" class="d-block w-100 h-75" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-verticle">
            </div>
          </div>
          <div class="carousel-item">
            <img src="/images/tug-boat-background.jpg" class="d-block w-100 h-75" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-horizontal"><br>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/images/lighthouse-background.jpg" class="d-block w-100 h-75" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-verticle">
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class='col-sm-4'>
      <div id="carouselId" class="carousel slide" data-ride="carousel" data-interval="10000">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/seascape-background.jpg" class="d-block w-100 h-75" alt="...">
            <div class="carousel-caption d-none d-md-block carousel-caption-verticle">
            </div>
